<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:elevation="2dp"
    android:layout_margin="2dp"
    android:backgroundTint="#FFFFFF"
    android:padding="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="100">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/thumbnail"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/row_padding"
                android:layout_weight="25"
                android:layout_marginEnd="@dimen/row_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="75"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twitter user name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twitter screen name" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/row1" />

        <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/image_entity"
            android:layout_width="400sp"
            android:layout_height="300sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tweet_text"
            android:fontFamily="serif"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/image_entity"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="35dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="33"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/retweet_count"
                    android:drawableLeft="@drawable/retweet"
                    android:layout_gravity="center"
                    android:drawablePadding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/retweet" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="33">

                <TextView
                    android:drawableLeft="@drawable/fav"
                    android:drawablePadding="3dp"
                    android:id="@+id/fav_count"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/fav" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="33">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="#F11313"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="delete"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="true"
                    android:textColor="#fafafa" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>